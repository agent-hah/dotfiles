                "ms-dotnettools.vscodeintellicode-csharp",
                "ms-python.vscode-pylance",
                "ms-vscode.azure-repos",
                "github.copilot.chat",
                "GitHub.copilot",
                "ms-vscode.cpptools-themes",
                "github.remotehub",
                "ms-vscode.remote-repositories",
                "esbenp.prettier-vscode",
